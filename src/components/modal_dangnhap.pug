#dangnhap.modal.fade(tabindex='-1' role='dialog' aria-labelledby='exampleModalCenterTitle' aria-hidden='true')
  .modal-dialog.modal-dialog-centered(role='document').modal-lg.modal_dangnhap
    .modal-content
      .modal-body
        .row
            .col-5
                img(src="./images/components/dangnhap.png", alt="")
            .col-7
                .content
                    ul#pills-tab.nav.nav-pills.mb-3(role='tablist')
                        li.nav-item
                            a#pills-home-tab.nav-link.active(data-toggle='tab' href='#pills-home' role='tab' aria-controls='pills-home' aria-selected='true') Đăng nhập
                        li.nav-item
                            a#pills-profile-tab.nav-link(data-toggle='tab' href='#pills-profile' role='tab' aria-controls='pills-profile' aria-selected='false') Tạo tài khoản
                    #pills-tabContent.tab-content
                        #pills-home.tab-pane.fade.show.active(role='tabpanel' aria-labelledby='pills-home-tab')
                            .dangnhap-content
                                .email
                                    span Email
                                    input(type="text" placeholder="Nhập email")
                                .pass
                                    span Mật khẩu
                                    input#passdn(type="password" placeholder="Nhập mật khẩu")
                                    img(src="./images/icons/eye.svg", alt="" onclick="hide()")
                                .dn-bottom
                                    .remember
                                        input#remember(type='checkbox' name='remember' value='1')
                                        label(for='remember')  Ghi nhớ đăng nhập
                                    a(href="./infor.html").btn-dangnhap Đăng nhập
                                    a(href="#").forgot  Quên mật khẩu?
                                    p Hoặc
                                    button.btn-face Đăng nhập bằng Facebook
                                        img(src="./images/icons/facebook.svg", alt="")
                        #pills-profile.tab-pane.fade(role='tabpanel' aria-labelledby='pills-profile-tab')
                            .dangki-content
                                .fullname
                                    span Họ và tên
                                    input(type="text" placeholder="Nhập họ và tên")
                                .email
                                    span Email
                                    input(type="text" placeholder="Nhập email")
                                .pass
                                    span Mật khẩu
                                    input#passdk(type="password" placeholder="Nhập mật khẩu")
                                    img(src="./images/icons/eye.svg", alt="" onclick="hidedk()")
                                .pass
                                    span 
                                    input#passdkag(type="password" placeholder="Nhập lại mật khẩu" )
                                    img(src="./images/icons/eye.svg", alt="" onclick="hidedkag()" )
                                .email
                                    span Phone
                                    input(type="text" placeholder="Nhập số điện thoại")
                                .pass
                                    span Lớp
                                    input(type="text" placeholder="Nhập lớp")
                                .dn-bottom
                                    .remember
                                        input#accept(type='checkbox' name='remember' value='2')
                                        label(for='accept')  
                                            span Đồng ý với các 
                                            span(style='font-weight: 600; cursor: pointer') Điều khoản sử dụng 
                                            span và 
                                            span(style='font-weight: 600; cursor: pointer') Chính sách bảo mật 
                                            span của website 
                                            span(style='color: #EE6217') Top
                                            span(style='color: #1972C5') loigiai.com
                                    button.btn-dangnhap Tạo tài khoản
                                    p Hoặc
                                    button.btn-face Đăng nhập bằng Facebook
                                        img(src="./images/icons/facebook.svg", alt="")

            